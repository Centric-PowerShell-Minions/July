$Computers = (Read-Host "Which server(s) would you like to process?(split by a comma").split(","); Get-CimInstance -ComputerName $Computers -Query 'SELECT csname, ServicePackMajorVersion, Version FROM Win32_OperatingSystem' |Select-Object PSComputerName, ServicePackMajorVersion, Version, @{ Name = 'BIOSSerial'; Expression = { Get-CimInstance -ComputerName $_.PSComputerName -Query 'SELECT SerialNumber FROM Win32_BIOS' | Select-Object -ExpandProperty SerialNumber } }
